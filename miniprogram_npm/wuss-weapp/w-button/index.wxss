@import '../common/theme/global.wxss';

.wuss-button.wuss-button-normalize {
  padding: 0;
  margin: 10px;
  outline: none;
  box-shadow: none;
  border-radius: 4px;
  text-shadow: none;
  font-size: 16px;
  border: 1px solid transparent;
  min-height: 42px;
  /* transition: background-color 50ms ease 0s, opacity 50ms ease 0s; */
}

.wuss-button.wuss-button-full {
  width: 100%;
  border-radius: 0;
  margin: 10px 0;
}

.wuss-button.wuss-button-inline {
  display: inline-block;
  padding: 0 10px;
}

.wuss-button.wuss-button-disabled {
  opacity: 0.4;
}

.wuss-button.wuss-button-normalize.wuss-button-default {
  background-color: rgb(255, 255, 255);
  border-color: rgb(223, 223, 223);
  color: rgb(51, 51, 51);
}

.wuss-button.wuss-button-normalize.wuss-button-default.wuss-button-hover {
  background-color: rgb(236, 236, 236);
}

.wuss-button.wuss-button-normalize.wuss-button-primary {
  background-color: rgb(69, 143, 246);
  border-color: rgb(68, 142, 246);
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-primary.wuss-button-hover {
  background-color: rgb(28, 117, 243);
}

.wuss-button.wuss-button-primary.wuss-button-disabled {
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-warn {
  background-color: rgb(255, 153, 0);
  border-color: rgb(255, 153, 0);
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-warn.wuss-button-hover {
  background-color: rgb(255, 136, 0);
}

.wuss-button.wuss-button-normalize.wuss-button-warn.wuss-button-disabled {
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-info {
  background-color: rgb(85, 178, 240);
  border-color: rgb(85, 178, 240);
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-info.wuss-button-hover {
  background-color: rgb(43, 159, 236);
}

.wuss-button.wuss-button-normalize.wuss-button-info.wuss-button-disabled {
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-danger {
  background-color: rgb(239, 71, 58);
  border-color: rgb(239, 71, 58);
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-normalize.wuss-button-danger.wuss-button-hover {
  background-color: rgb(228, 33, 18);
}

.wuss-button.wuss-button-normalize.wuss-button-danger.wuss-button-disabled {
  color: rgb(255, 255, 255);
}

.wuss-button.wuss-button-flat {
  border-radius: 0;
}

.wuss-button.wuss-button-normalize.wuss-button-default.wuss-button-ghost {
  border-color: rgb(223, 223, 223);
  color: rgb(51, 51, 51);
  background: transparent;
}

.wuss-button.wuss-button-normalize.wuss-button-default.wuss-button-ghost.wuss-button-hover {
  background-color: rgb(223, 223, 223);
  color: #ffffff;
}

.wuss-button.wuss-button-primary.wuss-button-ghost {
  border-color: rgb(68, 142, 246);
  color: rgb(68, 142, 246);
  background: transparent;
}

.wuss-button.wuss-button-primary.wuss-button-ghost.wuss-button-hover {
  background-color: rgb(28, 117, 243);
  color: #ffffff;
}

.wuss-button.wuss-button-normalize.wuss-button-warn.wuss-button-ghost {
  border-color: rgb(255, 153, 0);
  color: rgb(255, 153, 0);
  background: transparent;
}

.wuss-button.wuss-button-normalize.wuss-button-warn.wuss-button-ghost.wuss-button-hover {
  background-color: rgb(255, 136, 0);
  color: #ffffff;
}

.wuss-button.wuss-button-normalize.wuss-button-info.wuss-button-ghost {
  border-color: rgb(85, 178, 240);
  color: rgb(85, 178, 240);
  background: transparent;
}

.wuss-button.wuss-button-normalize.wuss-button-info.wuss-button-ghost.wuss-button-hover {
  background-color: rgb(43, 159, 236);
  color: #ffffff;
}

.wuss-button.wuss-button-normalize.wuss-button-danger.wuss-button-ghost {
  border-color: rgb(239, 71, 58);
  color: rgb(239, 71, 58);
  background: transparent;
}

.wuss-button.wuss-button-normalize.wuss-button-danger.wuss-button-ghost.wuss-button-hover {
  background-color: rgb(228, 33, 18);
  color: #ffffff;
}

.wuss-button.wuss-button-dashed.wuss-button-normalize {
  border-style: dashed;
}

.w-icon {
  margin-right: 5px;
}

.wuss-button.wuss-button-normalize.wuss-button-custom-hover {
  opacity: 0.6;
}

.wuss-button.wuss-button-normalize.wuss-button-circle {
  border-radius: 42px;
}

.w-activity-indicator {
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.wuss-activity-indicator {
  width: 15px;
  height: 15px;
  vertical-align: middle;
}
