<w-dialog
  visible="{{ _visible }}"
  maskClose="{{ maskClose }}"
  wuss-class="w-dialog"
>
	<view
	 class="wuss-class wuss-alert"
	 hover-class="none"
	 hover-stop-propagation="false"
  >
    <view class="wuss-alert-hd">
      <view class="wuss-alert-title">{{ title }}</view>
    </view>
    <view class="wuss-alert-bd">
      <rich-text class="wuss-alert-content" nodes="{{content}}"></rich-text>
    </view>
    <view class="wuss-alert-ft">
      <view class="wuss-alert-button-group">
        <view style="color: {{ buttonColor }};" bindtap="_handleClick" class="wuss-alert-button" hover-class="wuss-alert-button-hover">确定</view>
      </view>
    </view>
  </view>
</w-dialog>

