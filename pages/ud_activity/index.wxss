/* pages/mk_activity/index.wxss */
@import "../../common/lib/weui.wxss";
@import "../../assets/iconfont.wxss";

.container {
  position: absolute; 
  top: 0; 
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}
.my_container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}
page{
  height: 100%;
}
.cu-form-group{
  min-height: 7vh;
  height: 7vh;
}
.cu-form-group picker .picker{
  text-align: left;
}
.my_state{
  z-index: 999;
}
